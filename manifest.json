{
    "manifest_version": 3,
    "name": "QuickNote Vault",
    "version": "1.0",
    "description": "Save and manage quick notes with expiry and domain tracking.",
    "permissions": ["storage", "activeTab"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    }
  }
  